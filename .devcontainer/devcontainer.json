{
	"name": "Python 3.12 & ngspice",
	"image": "python:3.12-slim-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"xuanli.spice"
			]
		}
	},
	"postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh",
	// "postCreateCommand": "sudo apt-get update && sudo DEBIAN_FRONTEND=noninteractive apt-get install -y ngspice && pip install --user ipykernel matplotlib numpy py4spice",
	"remoteUser": "vscode"
}
